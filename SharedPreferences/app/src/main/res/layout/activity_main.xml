<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_belirle"
            app:layout_constraintEnd_toStartOf="@+id/button_sil" android:layout_marginBottom="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="11dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button_sayıyı_gör"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sil"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_belirle"
            app:layout_constraintStart_toEndOf="@+id/button_belirle" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textSize="30sp"/>
    <Button
            android:text="Sayıyı Gör"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/button_sil"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/button_belirle"
            android:layout_marginStart="8dp" android:layout_marginBottom="128dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/button_sayıyı_gör"/>

</android.support.constraint.ConstraintLayout>